<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomCleaners.TaskDetailPage"
             Title="Task Details">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">
            <Label Text="Description:" FontSize="Medium"/>
            <Label x:Name="DescriptionLabel" FontSize="Small"/>
            <Label Text="Status:" FontSize="Medium"/>
            <Label x:Name="StatusLabel" FontSize="Small"/>
            <Label Text="Notes:" FontSize="Medium"/>
            <Label x:Name="NotesLabel" FontSize="Small"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
